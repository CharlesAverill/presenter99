2170 REM = RENDER SLIDES = 
2180 READ TOK$
2190 IF TOK$="SLIDE" THEN 2500
2200 IF TOK$="TEXT" THEN 2700
2210 IF TOK$="COLORS" THEN 2600
2220 IF TOK$="LIST" THEN 2800
2230 IF TOK$="SPACING" THEN 2650
2240 IF TOK$="END_SLIDESHOW" THEN 2900
2250 IF TOK$="PAUSE" THEN 2950
2260 IF TOK$="BIGIMG" THEN 3000
2270 ERR$="UNKNOWN SLIDE TOKEN: '"&TOK$&"'"
2280 GOTO 4000


2500 REM == RENDER SLIDE TITLE ==
2510 GOSUB 4100
2520 GOSUB 4060
2530 IF COLORSWAP=0 THEN 2540
2535 GOSUB 4170
2540 READ TITLE$
2550 CALL CLEAR
2560 PRINT TAB(CENTERCOL(TITLE$));TITLE$
2570 PRINT ""
2580 ROW=3
2590 GOTO 2180


2600 REM == CHANGE COLORS ==
2610 READ FG,BG
2620 COLORSWAP=1
2630 GOTO 2180


2650 REM == SPACING ==
2655 READ N
2660 IF N<>-1 THEN 2670
2665 N=22-ROW
2670 FOR I=1 TO N
2675 PRINT
2680 ROW = ROW+1
2685 NEXT I
2690 GOTO 2180


2700 REM = RENDER SLIDE TEXT =
2710 READ TEXT$
2720 PRINT TEXT$:""
2730 ROW=ROW+2+INT(LEN(TEXT$)/32)
2740 GOTO 2180


2800 REM = RENDER LISTS =
2810 READ ITEM$
2820 IF ITEM$="END" THEN 2180
2830 PRINT "- ";ITEM$
2840 ROW=ROW+1
2850 GOTO 2810


2900 REM = END SLIDESHOW =
2910 GOSUB 4100
2920 GOSUB 4060
2930 GOTO 4030

2950 REM = PAUSE =
2960 GOSUB 4060
2970 GOTO 2180

3000 REM = BIGIMG =
3001 GOSUB 4060
3002 GOSUB 4100
3003 IF COLORSWAP=0 THEN 3005
3004 GOSUB 4170
3005 READ NCHARS, TITLE$
3006 CALL CLEAR
3007 PRINT TAB(CENTERCOL(TITLE$));TITLE$:""
3008 ROW=15
3009 GOSUB 4100
3010 FOR I=128 TO 127+NCHARS
3020   READ NEWCHR$
3030   CALL CHAR(I, NEWCHR$)
3040 NEXT I
3045 CALL CLEAR
3050 FOR R=1 TO 24
3060   C=1
3070   IF C>32 THEN 3120
3080   READ CHR,COUNT
3090   CALL HCHAR(R,C,CHR,COUNT)
3100   C=C+COUNT
3110   GOTO 3070
3120 NEXT R
3130 GOTO 2180
